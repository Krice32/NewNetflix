@model NewNeflixFrontEnd.Models.Series

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Series</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SeId" />
            <div class="form-group">
                <label asp-for="SeTitle" class="control-label"></label>
                <input asp-for="SeTitle" class="form-control" />
                <span asp-validation-for="SeTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeDate" class="control-label"></label>
                <input asp-for="SeDate" class="form-control" />
                <span asp-validation-for="SeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeImg" class="control-label"></label>
                <input asp-for="SeImg" class="form-control" />
                <span asp-validation-for="SeImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeQtdSeasons" class="control-label"></label>
                <input asp-for="SeQtdSeasons" class="form-control" />
                <span asp-validation-for="SeQtdSeasons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeSynopsis" class="control-label"></label>
                <input asp-for="SeSynopsis" class="form-control" />
                <span asp-validation-for="SeSynopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrId" class="control-label"></label>
                <select asp-for="GrId" class="form-control" asp-items="ViewBag.GrId"></select>
                <span asp-validation-for="GrId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br>
    <a class="btn btn-danger" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
