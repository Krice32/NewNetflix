@model NewNeflixFrontEnd.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h5>Detalhes</h5>

<div>
    <!--<h4>Movie</h4>-->
    <hr />
    <dl class="row">
        <!--<dt class = "col-sm-2">
            Título do filme
        </dt>-->

        <dt class="col-sm-12">
            <h3></a>@Html.DisplayFor(model => model.MvTitle)</h3>
        </dt>

        <!--<dt class = "col-sm-2">
            Imagem
        </dt>-->

        <dd class="col-sm-4">
            <img src=@Html.DisplayFor(model => model.MvImg) width="100%" height="400" />
        </dd>

        <!--<dt class = "col-sm-2">
            Sinopse
        </dt>-->

        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.MvSynopsis)
        </dd>

        <dt class="col-sm-2">
            Duração
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MvDuration) minutos
        </dd>
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MvDate)
        </dd>
        <dt class="col-sm-2">
            Gênero
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gr.Genre1)
        </dd>


    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.MvId">Editar</a> |
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.MvId">Deletar</a> |
  <br>
    <a class="btn btn-danger" asp-action="Index">Voltar</a>
</div>