@model NewNeflixFrontEnd.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Filme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MvId" />
            <div class="form-group">
                <label asp-for="MvTitle" class="control-label">Título do filme</label>
                <input asp-for="MvTitle" class="form-control" />
                <span asp-validation-for="MvTitle" class="text-danger"></span>
            </div>
            <div class="form-group"> 
                <label asp-for="MvDate" class="control-label">Data</label>
                <input asp-for="MvDate" class="form-control" />
                <span asp-validation-for="MvDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MvImg" class="control-label">Imagem</label>
                <input asp-for="MvImg" class="form-control" />
                <span asp-validation-for="MvImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MvDuration" class="control-label">Duração</label>
                <input asp-for="MvDuration" class="form-control" />
                <span asp-validation-for="MvDuration" class="text-danger"></span>
            </div>
            <div class="form-group" height="auto">
                <label asp-for="MvSynopsis" class="control-label">Sinopse</label>
                <input asp-for="MvSynopsis" class="form-control" />
                <span asp-validation-for="MvSynopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrId" class="control-label">Gênero</label>
                <select asp-for="GrId" class="form-control" asp-items="ViewBag.GrId"></select>
                <span asp-validation-for="GrId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
   <br>
    <a class="btn btn-danger" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
