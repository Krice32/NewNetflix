@model NewNeflixFrontEnd.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Filme</h1>

<h3>Tem certeza que quer deletar o filme "@Html.DisplayFor(model => model.MvTitle)"?</h3>
<div>
    <!--<h4>Movie</h4>-->
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MvTitle)
        </dd>
        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MvDate)
        </dd>
        <dt class = "col-sm-2">
            Imagem
        </dt>
        <dd class = "col-sm-10">
            <img src=@Html.DisplayFor(model => model.MvImg) width=300 height=400/>
        </dd>
        <dt class = "col-sm-2">
            Duração
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MvDuration) minutos
        </dd>
        <dt class = "col-sm-2">
            Sinopse
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MvSynopsis)
        </dd>
        <dt class = "col-sm-2">
            Gênero
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gr.Genre1)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MvId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a listagem</a>
    </form>
</div>
